@model AutoHaven.ViewModel.AdminPostsViewModel

@{
    ViewData["Title"] = "Car Posts Management";
}

<div class="max-w-7xl mx-auto">
    <div class="flex items-start justify-between mb-6">
        <div>
            <h1 class="text-2xl font-semibold">Car Posts Management</h1>
            <p class="text-sm text-charcoal/80">Manage, feature, and review all vehicle posts on the platform.</p>
        </div>
    </div>

    <!-- REPLACE your filters form with this block -->
    <form id="filtersForm" method="get" class="grid grid-cols-12 gap-3 mb-6 items-center">

        <!-- Search: wider on md+ so selects end up on the right -->
        <div class="col-span-12 md:col-span-8">
            <input name="search" value="@Model.Search"
                   placeholder="Search by Manufacturer, Model, VIN, Seller..."
                   class="w-full rounded-lg border border-border-light px-4 py-3 bg-surface-light dark:bg-surface-dark focus:outline-none" />
        </div>

        <!-- Status: placed in the right area (col 9-10 on md) -->
        <div class="col-span-6 sm:col-span-4 md:col-span-2 md:col-start-9">
            <select name="status"
                    class="w-full rounded-lg border border-border-light px-3 py-2 bg-surface-light dark:bg-surface-dark">
                <option value="All" selected="@(Model.Status == "All")">Status: All</option>
                <option value="Available" selected="@(Model.Status == "Available")">Available</option>
                <option value="Sold" selected="@(Model.Status == "Sold")">Sold</option>
                <option value="Rented" selected="@(Model.Status == "Rented")">Rented</option>
                <option value="Unavaliable" selected="@(Model.Status == "Unavaliable")">Unavaliable</option>
            </select>

        </div>

        <!-- Type: furthest right (col 11-12 on md) -->
        <div class="col-span-6 sm:col-span-4 md:col-span-2 md:col-start-11">
            <select name="type"
                    class="w-full rounded-lg border border-border-light px-3 py-2 bg-surface-light dark:bg-surface-dark">
                <option value="All" selected="@(Model.Type == "All")">Type: All</option>
                <option value="ForSelling" selected="@(Model.Type == "ForSelling")">For Sale</option>
                <option value="ForRenting" selected="@(Model.Type == "ForRenting")">For Rent</option>
            </select>
        </div>

        <!-- Hidden page input so JS can reset pagination to 1 when filters change -->
        <input type="hidden" name="page" id="filtersPageInput" value="@Model.Page" />

    </form>

    @Html.AntiForgeryToken()

    <div class="bg-surface-light dark:bg-surface-dark rounded-xl border border-border-light overflow-hidden shadow-sm">
        <!-- list header (optional) -->
        <div class="px-6 py-3 border-b border-border-light hidden md:flex items-center text-sm text-text-light-secondary dark:text-text-dark-secondary">
            <div class="w-28">Photo</div>
            <div class="flex-1">Post details</div>
            <div class="w-48 text-right">Key info</div>
            <div class="w-48 text-right">Status</div>
            <div class="w-40 text-right">Actions</div>
        </div>

        <div>
            @if (Model.Posts == null || !Model.Posts.Any())
            {
                <div class="p-6 text-center text-sm text-charcoal/70">No posts found.</div>
            }
            else
            {
                @foreach (var post in Model.Posts)
                {
                    <div class="px-6 py-4 border-b border-border-light flex flex-col md:flex-row items-start md:items-center gap-3">
                        <!-- thumbnail -->
                        <div class="w-full md:w-28 flex-shrink-0">
                            <img src="@(string.IsNullOrEmpty(post.ThumbnailUrl) ? Url.Content("~/images/Default/default.jpg") : post.ThumbnailUrl)"
                                 alt="thumb" class="w-24 h-16 object-cover rounded-md shadow-sm" />
                        </div>

                        <!-- post details -->
                        <div class="flex-1 min-w-0">
                            <div class="flex items-start justify-between">
                                <div class="min-w-0">
                                    <div class="font-semibold text-charcoal truncate">@post.Title</div>
                                    <div class="text-xs text-text-light-secondary dark:text-text-dark-secondary mt-1">
                                        ID: #@post.ListingId
                                    </div>
                                    <div class="text-xs text-text-light-secondary dark:text-text-dark-secondary mt-1">
                                        @post.SellerDisplay
                                    </div>
                                </div>

                                <div class="text-right ml-4">
                                    <div class="font-semibold">@post.PriceLabel: $@post.Price.ToString("N0")</div>
                                    <div class="text-xs text-text-light-secondary dark:text-text-dark-secondary mt-1">@post.CreatedAt.ToString("yyyy-MM-dd")</div>
                                </div>
                            </div>

                            <div class="mt-3 flex items-center justify-between">
                                <div>
                                    @* status badge *@
                                    @{
                                        var statusClass = post.Status == "Available" ? "bg-[#e6fff1] text-[#2a9d66]" :
                                        post.Status == "Rented" ? "bg-[#fff7e6] text-[#d37f00]" :
                                        post.Status == "Unavaliable" ? "bg-[#ffe6e6] text-[#d63a3a]" :
                                        "bg-[#f3f4f6] text-[#667085]";
                                    }
                                    <span class="inline-flex items-center text-xs font-medium px-3 py-1 rounded-full @statusClass">
                                        @post.Status
                                    </span>
                                </div>

                                <div class="flex items-center gap-2">
                                    <a asp-action="Details" asp-controller="Car" asp-route-id="@post.ListingId"
                                       class="inline-flex items-center gap-2 border border-border-light rounded-lg px-3 py-1.5 text-sm">
                                        <span class="material-symbols-outlined text-sm">visibility</span>
                                        Details
                                    </a>

                                    <button data-listing="@post.ListingId"
                                            class="feature-btn inline-flex items-center gap-2 rounded-lg px-3 py-1.5 text-sm border border-border-light @(post.IsFeatured ? "bg-yellow-50 ring-1 ring-yellow-200" : "bg-transparent")"
                                            onclick="toggleFeature(this)">
                                        <span class="material-symbols-outlined">star</span>
                                        Feature
                                    </button>

                                    <button data-listing="@post.ListingId"
                                            class="delete-btn inline-flex items-center gap-2 rounded-lg px-3 py-1.5 text-sm bg-red-50 text-red-700 border border-red-100"
                                            onclick="deletePost(this)">
                                        <span class="material-symbols-outlined">delete</span>
                                        Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- footer / pagination -->
        <div class="px-6 py-4 flex items-center justify-between text-sm">
            <div class="text-text-light-secondary dark:text-text-dark-secondary">
                Showing @((Model.Page - 1) * Model.PageSize + (Model.Posts?.Any() == true ? 1 : 0)) - @((Model.Page - 1) * Model.PageSize + (Model.Posts?.Count ?? 0)) of @Model.TotalCount posts
            </div>

            <div class="flex items-center gap-2">
                @{
                    var totalPages = (int)Math.Ceiling(Model.TotalCount / (double)Model.PageSize);
                    var prev = Model.Page <= 1 ? 1 : Model.Page - 1;
                    var next = Model.Page >= totalPages ? totalPages : Model.Page + 1;
                }
                <a href="@Url.Action("PostListing", new { page = prev, search = Model.Search, status = Model.Status, type = Model.Type, dateFrom = Model.DateFrom?.ToString("yyyy-MM-dd"), dateTo = Model.DateTo?.ToString("yyyy-MM-dd") })"
                   class="inline-flex items-center justify-center w-9 h-9 rounded-full border border-border-light bg-surface-light">
                    <span class="material-symbols-outlined">chevron_left</span>
                </a>

                <div class="px-3">Page @Model.Page of @totalPages</div>

                <a href="@Url.Action("PostListing", new { page = next, search = Model.Search, status = Model.Status, type = Model.Type, dateFrom = Model.DateFrom?.ToString("yyyy-MM-dd"), dateTo = Model.DateTo?.ToString("yyyy-MM-dd") })"
                   class="inline-flex items-center justify-center w-9 h-9 rounded-full border border-border-light bg-surface-light">
                    <span class="material-symbols-outlined">chevron_right</span>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ensure SweetAlert2 is loaded, returns a Promise that resolves when Swal is available
        function ensureSwal() {
            return new Promise((resolve) => {
                if (window.Swal) return resolve(window.Swal);

                // avoid injecting the script multiple times
                const existing = document.querySelector('script[data-swal-cdn]');
                if (existing) {
                    existing.addEventListener('load', () => resolve(window.Swal));
                    existing.addEventListener('error', () => resolve(null));
                    return;
                }

                const s = document.createElement('script');
                s.src = 'https://cdn.jsdelivr.net/npm/sweetalert2@11';
                s.setAttribute('data-swal-cdn', '1');
                s.onload = () => resolve(window.Swal);
                s.onerror = () => resolve(null);
                document.head.appendChild(s);
            });
        }

        // Show a SweetAlert2 toast (message, type: success|error|info|warning)
        async function showSwalNotification(message, type) {
            if (!message) return;
            const SwalLib = await ensureSwal();
            if (!SwalLib) {
                // fallback to simple alert if Swal failed to load
                alert(message);
                return;
            }

            SwalLib.fire({
                toast: true,
                position: 'top-end',
                icon: type || 'info',
                title: message,
                showConfirmButton: false,
                timer: 4000,
                timerProgressBar: true
            });
        }

        // helper to get anti-forgery token value
        function getRequestVerificationToken() {
            var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenInput ? tokenInput.value : '';
        }

        // submit filters form and reset to page 1
        function submitFilters() {
            var form = document.getElementById('filtersForm');
            if (!form) return;

            // reset page to 1
            var pageInput = document.getElementById('filtersPageInput');
            if (!pageInput) {
                pageInput = document.createElement('input');
                pageInput.type = 'hidden';
                pageInput.name = 'page';
                pageInput.id = 'filtersPageInput';
                form.appendChild(pageInput);
            }
            pageInput.value = '1';

            form.submit();
        }

        // attach change listeners to selects (so you don't need inline onchange attributes)
        (function () {
            var status = document.querySelector('#filtersForm select[name="status"]');
            var type = document.querySelector('#filtersForm select[name="type"]');

            if (status) status.addEventListener('change', submitFilters);
            if (type) type.addEventListener('change', submitFilters);
        })();

        // Updated toggleFeature that uses server JSON notification and SweetAlert2 immediately
        async function toggleFeature(btn) {
            var listingId = btn.getAttribute('data-listing');
            if (!listingId) return;
            if (!confirm('Toggle feature for this post?')) return;

            var token = getRequestVerificationToken();
            var formData = new FormData();
            formData.append('listingId', listingId);

            btn.disabled = true;
            try {
                const res = await fetch('@Url.Action("ToggleFeature", "Admin")', {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token },
                    body: formData
                });

                // parse JSON even on non-200 responses
                let data = null;
                try { data = await res.json(); } catch (e) { /* ignore parse error */ }

                if (res.ok && data && data.success) {
                    // update UI immediately
                    btn.classList.toggle('bg-yellow-50', data.isFeatured);
                    btn.classList.toggle('ring-1', data.isFeatured);
                    btn.classList.toggle('ring-yellow-200', data.isFeatured);

                    // show SweetAlert2 toast from server notification if present
                    const note = (data && data.notification) ? data.notification : { message: data.isFeatured ? 'Listing marked as featured.' : 'Listing removed from featured.', type: 'success' };
                    await showSwalNotification(note.message, note.type || 'success');
                } else {
                    const note = (data && data.notification) ? data.notification : { message: 'Could not toggle featured state.', type: 'error' };
                    await showSwalNotification(note.message, note.type || 'error');
                }
            } catch (err) {
                console.error(err);
                await showSwalNotification('Network error while toggling feature.', 'error');
            } finally {
                btn.disabled = false;
            }
        }

        // Updated deletePost: show notification immediately, then reload to keep paging/TempData behavior
        async function deletePost(btn) {
            var listingId = btn.getAttribute('data-listing');
            if (!listingId) return;
            if (!confirm('Delete this post? This cannot be undone.')) return;

            var token = getRequestVerificationToken();
            var formData = new FormData();
            formData.append('listingId', listingId);

            btn.disabled = true;
            try {
                const res = await fetch('@Url.Action("Delete", "Admin")', {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token },
                    body: formData
                });

                let data = null;
                try { data = await res.json(); } catch (e) { /* ignore parse error */ }

                if (res.ok && data && data.success) {
                    // Show server notification if present, then reload to refresh list and allow TempData partial to show if needed
                    const note = (data && data.notification) ? data.notification : { message: 'Listing deleted.', type: 'success' };
                    await showSwalNotification(note.message, note.type || 'success');

                    // small delay so user can see toast, then reload
                    setTimeout(() => { location.reload(); }, 600);
                } else {
                    const note = (data && data.notification) ? data.notification : { message: 'Could not delete the post.', type: 'error' };
                    await showSwalNotification(note.message, note.type || 'error');
                }
            } catch (err) {
                console.error(err);
                await showSwalNotification('Network error while deleting post.', 'error');
            } finally {
                btn.disabled = false;
            }
        }
    </script>
}
