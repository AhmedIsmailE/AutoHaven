
@{

    string title = "Payment Successful!" ;
    string message = "Your subscription has been activated successfully.";
    string bgColor ="#d1fae5";  
    string textColor = "#065f46"; 
    string icon ="bi-check-circle-fill" ;
}

<div style="min-height: 80vh; display: flex; align-items: center; justify-content: center;">
    <div class="card shadow-lg border-0 rounded-3"
         style="width: 450px; background-color:@bgColor; color:@textColor; animation: fadeIn 0.6s ease;">

        <div class="card-body text-center p-4">

            <i class="bi @icon" style="font-size: 4rem;"></i>

            <h2 class="fw-bold mt-3">@title</h2>

            <p class="mt-2" style="font-size: 1.1rem;">
                @message
            </p>

            <p class="mt-4 fw-semibold" style="font-size: 1rem;">
                Redirecting in <span id="counter" class="fw-bold">10</span> seconds...
            </p>

            <button style="text-decoration:underline" class="btn btn-dark mt-3" onclick="window.location.href='/'">
                Go Now
            </button>

        </div>
    </div>
</div>


<style>
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<script>
    let counter = 10;
    const counterSpan = document.getElementById("counter");

    const interval = setInterval(() => {
        counter--;
        counterSpan.innerText = counter;

        if (counter <= 0) {
            clearInterval(interval);
            window.location.href = "/";
        }

    }, 1000);
</script>

