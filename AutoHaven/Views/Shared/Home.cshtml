    <script>
        document.addEventListener("DOMContentLoaded", () => {

            // ====== ANIMATION LOGIC ======
            const simpleElements = document.querySelectorAll('.animate-on-scroll');
            const staggerContainers = document.querySelectorAll('.stagger');

            const observerOptions = {
                root: null,
                rootMargin: '0px 0px -10% 0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const target = entry.target;

                        // Case A: Stagger Container
                        if (target.classList.contains('stagger')) {
                            const children = Array.from(target.children);
                            children.forEach((child, index) => {
                                setTimeout(() => {
                                    child.classList.remove('start-hidden');
                                }, index * 150);
                            });
                            observer.unobserve(target);
                        }
                        // Case B: Simple Element
                        else {
                            target.classList.remove('start-hidden');
                            observer.unobserve(target);
                        }
                    }
                });
            }, observerOptions);

            // Initialize: Apply hidden class and start observing
            simpleElements.forEach(el => {
                el.classList.add('start-hidden');
                observer.observe(el);
            });

            staggerContainers.forEach(container => {
                // Hide children initially
                Array.from(container.children).forEach(child => {
                    child.classList.add('start-hidden');
                });
                observer.observe(container);
            });

            // ====== Theme toggle (dark/light) ======
            const themeToggle = document.getElementById("theme-toggle");
            if(themeToggle) {
                themeToggle.addEventListener("click", () => {
                    document.documentElement.classList.toggle("dark");
                });
            }

            // ====== Tabs: Rent / Buy toggle visual only ======
            // NOTE: These elements were removed from the HTML, but the script handles their absence gracefully.
            const tabRent = document.getElementById("tabRent");
            const tabBuy = document.getElementById("tabBuy");

            if(tabRent && tabBuy) {
                tabRent.addEventListener("click", () => {
                    // 1. Make Rent ACTIVE
                    // Remove inactive styles
                    tabRent.classList.remove("text-white/80", "hover:bg-white/10");
                    // Add active styles (Solid White)
                    tabRent.classList.add("bg-white", "text-navy", "font-bold");

                    // 2. Make Buy INACTIVE
                    // Remove active styles
                    tabBuy.classList.remove("bg-white", "text-navy", "font-bold");
                    // Add inactive styles (Transparent with Hover effect)
                    tabBuy.classList.add("text-white/80", "hover:bg-white/10");
                });

                tabBuy.addEventListener("click", () => {
                    // 1. Make Buy ACTIVE
                    tabBuy.classList.remove("text-white/80", "hover:bg-white/10");
                    tabBuy.classList.add("bg-white", "text-navy", "font-bold");

                    // 2. Make Rent INACTIVE
                    tabRent.classList.remove("bg-white", "text-navy", "font-bold");
                    tabRent.classList.add("text-white/80", "hover:bg-white/10");
                });
            }

            // ====== Simple carousel ======
            const carList = document.getElementById("carList");
            const nextBtn = document.getElementById("nextCar");
            const prevBtn = document.getElementById("prevCar");

            if(nextBtn) {
                nextBtn.addEventListener("click", () => {
                    if (!carList) return;
                    carList.appendChild(carList.firstElementChild);
                });
            }
            if(prevBtn) {
                prevBtn.addEventListener("click", () => {
                    if (!carList) return;
                    carList.insertBefore(carList.lastElementChild, carList.firstElementChild);
                });
            }

            // ====== Parallax ======
            const heroBg = document.getElementById('heroBg');
            if (heroBg) {
                let latestY = 0;
                let ticking = false;

                function onScroll() {
                    latestY = window.scrollY;
                    if (!ticking) {
                        window.requestAnimationFrame(() => {
                            const translate = Math.max(-60, Math.min(60, latestY * -0.08));
                            heroBg.style.transform = `translate3d(0, ${translate}px, 0) scale(1.03)`;
                            ticking = false;
                        });
                        ticking = true;
                    }
                }
                window.addEventListener('scroll', onScroll, { passive: true });
                onScroll();
            }

            // ====== Smooth scroll ======
            document.querySelectorAll('a[href^="#"]').forEach(a => {
                a.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    if (!href || href === '#') return;
                    const el = document.querySelector(href);
                    if (!el) return;
                    e.preventDefault();
                    el.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            });

        });
    </script>

