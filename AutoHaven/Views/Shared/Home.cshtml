        /* Custom CSS for animations and spacing */
        :root {
            --section-gap: 6rem;
            --section-gap-lg: 8rem;
            --ease-anim: cubic-bezier(.2, .9, .2, 1);
        }

        /* --- ANIMATION CSS START --- */

        /* 1. Default state: VISIBLE (so if JS fails, content is still seen) */
        .animate-on-scroll,
        .stagger > * {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 600ms var(--ease-anim), transform 600ms var(--ease-anim);
        }

        /* 2. The class JS will add to hide elements initially */
        .start-hidden {
            opacity: 0 !important;
            transform: translateY(20px) !important;
        }

        /* --- ANIMATION CSS END --- */

        .hero-content {
            position: relative;
            z-index: 10;
        }

        /* Parallax hero */
        .hero-parallax {
            position: relative;
            overflow: hidden;
        }

            .hero-parallax .hero-bg {
                position: absolute;
                inset: 0;
                background-size: cover;
                background-position: center;
                transform: translate3d(0, 0, 0);
                transition: transform 0.1s linear;
                will-change: transform;
                filter: brightness(.55);
            }

        /* Card micro-interactions */
        .car-card {
            transition: transform 300ms var(--ease-anim), box-shadow 300ms var(--ease-anim);
            will-change: transform, box-shadow;
        }

            .car-card:hover {
