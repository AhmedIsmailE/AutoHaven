@model List<AutoHaven.Models.CarListingModel>


@{
    var role = User.FindFirst("Role")?.Value;
    ViewBag.Title = "AutoHaven - Premium Car Renting & Selling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html class="light" lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewBag.Title</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" crossorigin href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        :root {
            --section-gap: 3rem;
            --section-gap-lg: 4rem;
            --ease-anim: cubic-bezier(.2, .9, .2, 1);
        }

        /* Animation */
        .animate-on-scroll,
        .stagger > * {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 600ms var(--ease-anim), transform 600ms var(--ease-anim);
        }

        .start-hidden {
            opacity: 0 !important;
            transform: translateY(20px) !important;
        }

        /* Hero Parallax */
        .hero-parallax {
            position: relative;
            overflow: hidden;
        }

            .hero-parallax .hero-bg {
                position: absolute;
                inset: 0;
                background-size: cover;
                background-position: center;
                transform: translate3d(0, 0, 0);
                transition: transform 0.1s linear;
                will-change: transform;
                filter: brightness(.55);
            }

        .hero-content {
            position: relative;
            z-index: 10;
        }

        /* Card Animations */
        .car-card {
            transition: transform 300ms var(--ease-anim), box-shadow 300ms var(--ease-anim);
            will-change: transform, box-shadow;
        }

            .car-card:hover {
                transform: translateY(-8px) scale(1.01);
                box-shadow: 0 18px 50px rgba(10, 25, 49, 0.12);
            }

        .car-img {
            transition: transform 650ms var(--ease-anim);
            will-change: transform;
        }

        .car-card:hover .car-img {
            transform: scale(1.03);
        }

        /* Buttons */
        .btn-primary,
        .btn-outline-primary {
            transition: transform 160ms var(--ease-anim), box-shadow 160ms var(--ease-anim);
        }

            .btn-primary:hover,
            .btn-outline-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 30px rgba(2, 6, 23, 0.08);
            }

        /* Featured Badge */
        .featured-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
            color: #000;
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 4px;
            z-index: 10;
            box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
        }

        /* Section Styling */
        .section {
            padding-top: var(--section-gap);
            padding-bottom: var(--section-gap);
            background-color: #fff;
        }

        @@media (min-width: 1024px) {
            .section {
                padding-top: var(--section-gap-lg);
                padding-bottom: var(--section-gap-lg);
            }
        }

        .no-featured {
            text-align: center;
            padding: 3rem;
        }

        /* Why Card */
        .why-card {
            background: #fff;
            border: 1px solid #cfd7e7;
            transition: all 300ms var(--ease-anim);
        }

            .why-card:hover {
                border-color: #007BFF;
                box-shadow: 0 8px 24px rgba(0, 123, 255, 0.1);
                transform: translateY(-4px);
            }

        .dark .why-card {
            background: #1a2847;
            border-color: #4a5f7f;
        }

            .dark .why-card:hover {
                border-color: #007BFF;
            }

        /* How Steps */
        .how-step {
            padding: 2rem;
            background: #f8f9fc;
            border-radius: 12px;
            border: 1px solid #e7ebf3;
            transition: all 300ms var(--ease-anim);
        }

            .how-step:hover {
                background: #f0f4fc;
                box-shadow: 0 6px 20px rgba(0, 123, 255, 0.08);
            }

        .dark .how-step {
            background: #1a2847;
            border-color: #4a5f7f;
        }

            .dark .how-step:hover {
                background: #253055;
            }

        .how-circle {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 3.5rem;
            height: 3.5rem;
            border: 2px solid #007BFF;
            border-radius: 9999px;
            font-weight: 700;
            color: #007BFF;
            font-size: 1.25rem;
        }

        /* Form Inputs */
        .form-input,
        .form-select,
        .form-textarea {
            background: #fff;
            border: 1px solid #cfd7e7;
            color: #0d121b;
            border-radius: 8px;
            padding: 0.875rem;
            transition: border-color 200ms, box-shadow 200ms;
        }

            .form-input:focus,
            .form-select:focus,
            .form-textarea:focus {
                outline: none;
                border-color: #007BFF;
                box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
            }

        .dark .form-input,
        .dark .form-select,
        .dark .form-textarea {
            background: #1a2847;
            border-color: #4a5f7f;
            color: #fff;
        }
    </style>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#007BFF",
                        "background-light": "#FFFFFF",
                        "background-dark": "#0A1931",
                        "navy": "#0A1931"
                    },
                    fontFamily: {
                        "display": ["Plus Jakarta Sans", "sans-serif"]
                    }
                }
            }
        }
    </script>
</head>

<body class="font-display bg-background-light text-navy dark:bg-background-dark dark:text-background-light">

    <div class="relative flex min-h-screen w-full flex-col overflow-x-hidden">
        <main>

            <!-- ✅ HERO SECTION -->
            <section class="hero-parallax section bg-white dark:bg-navy min-h-[600px] flex items-center">
                <div id="heroBg" class="hero-bg" style='background-image: url("https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&w=3846&auto=format&fit=crop");'></div>

                <div class="absolute inset-0"></div>

                <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 hero-content text-center w-full">
                    <div class="max-w-3xl mx-auto">
                        <h1 class="text-5xl md:text-7xl font-black leading-tight tracking-tight text-white animate-on-scroll">
                            The Ultimate Driving Experience.
                        </h1>

                        <p class="text-xl text-white/90 mt-6 animate-on-scroll">
                            Premium cars for rent and sale. Find your perfect vehicle today.
                        </p>

                        <div class="mt-12 flex flex-col sm:flex-row justify-center gap-4 animate-on-scroll">
                            <a href="#featured" class="flex max-w-[400px] mx-auto sm:mx-0 cursor-pointer items-center justify-center overflow-hidden rounded-lg h-14 px-8 bg-primary text-white text-base font-bold gap-2 hover:shadow-lg transition-all">
                                <span class="material-symbols-outlined">directions_car</span>
                                <span>Browse Featured Cars</span>
                            </a>
                            <a href="@Url.Action("Index", "Car")" class="flex max-w-[400px] mx-auto sm:mx-0 cursor-pointer items-center justify-center overflow-hidden rounded-lg h-14 px-8 bg-white dark:bg-gray-800 text-primary dark:text-white text-base font-bold gap-2 border-2 border-primary dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all">
                                <span class="material-symbols-outlined">search</span>
                                <span>View All Cars</span>
                            </a>
                        </div>
                    </div>
                </div>
            </section>

            <!-- ✅ WHY CHOOSE SECTION -->
            <section class="section bg-background-light dark:bg-background-dark">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="text-center mb-16 animate-on-scroll">
                        <h2 class="text-4xl md:text-5xl font-bold text-navy dark:text-white">Why Choose AutoHaven?</h2>
                        <p class="text-gray-600 dark:text-gray-400 mt-4 text-lg">Premium experience from start to finish.</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

                        <!-- Card 1 -->
                        <div class="why-card p-8 rounded-xl text-center animate-on-scroll">
                            <div class="flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 dark:bg-blue-900/20 mx-auto mb-6">
                                <span class="material-symbols-outlined text-4xl text-primary">verified</span>
                            </div>
                            <h3 class="text-2xl font-bold text-navy dark:text-white mb-3">Verified Quality</h3>
                            <p class="text-gray-600 dark:text-gray-400">Every vehicle inspected and certified for top performance and reliability.</p>
                        </div>

                        <!-- Card 2 -->
                        <div class="why-card p-8 rounded-xl text-center animate-on-scroll">
                            <div class="flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 dark:bg-blue-900/20 mx-auto mb-6">
                                <span class="material-symbols-outlined text-4xl text-primary">schedule</span>
                            </div>
                            <h3 class="text-2xl font-bold text-navy dark:text-white mb-3">Flexible Booking</h3>
                            <p class="text-gray-600 dark:text-gray-400">Customizable rental periods and purchase options designed to fit your schedule.</p>
                        </div>

                        <!-- Card 3 -->
                        <div class="why-card p-8 rounded-xl text-center animate-on-scroll">
                            <div class="flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 dark:bg-blue-900/20 mx-auto mb-6">
                                <span class="material-symbols-outlined text-4xl text-primary">workspace_premium</span>
                            </div>
                            <h3 class="text-2xl font-bold text-navy dark:text-white mb-3">Premium Experience</h3>
                            <p class="text-gray-600 dark:text-gray-400">Seamless service, professional support, and first-class treatment throughout.</p>
                        </div>

                    </div>
                </div>
            </section>

            <!-- ✅ FEATURED CARS SECTION -->
            <section id="featured" class="section bg-gray-50 dark:bg-navy/30">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center mb-12">
                        <div>
                            <h2 class="text-4xl md:text-5xl font-bold text-navy dark:text-white animate-on-scroll">
                                ⭐ Featured Vehicles
                            </h2>
                            @if (Model != null && Model.Count > 0)
                            {
                                <p class="text-gray-600 dark:text-gray-400 mt-2 animate-on-scroll">@Model.Count premium listings</p>
                            }
                        </div>

                        @if (Model != null && Model.Count > 0)
                        {
                            <div class="flex gap-3 animate-on-scroll">
                                <button id="prevCar" class="flex items-center justify-center w-12 h-12 rounded-full border-2 border-gray-300 dark:border-gray-600 hover:border-primary dark:hover:border-primary hover:text-primary dark:hover:text-primary transition-all text-gray-600 dark:text-gray-400">
                                    <span class="material-symbols-outlined">arrow_back</span>
                                </button>
                                <button id="nextCar" class="flex items-center justify-center w-12 h-12 rounded-full border-2 border-gray-300 dark:border-gray-600 hover:border-primary dark:hover:border-primary hover:text-primary dark:hover:text-primary transition-all text-gray-600 dark:text-gray-400">
                                    <span class="material-symbols-outlined">arrow_forward</span>
                                </button>
                            </div>
                        }
                    </div>

                    @if (Model != null && Model.Count > 0)
                    {
                        <div id="carList" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                            @foreach (var car in Model)
                            {
                                var carImages = car.CarImages != null && car.CarImages.Count > 0
                                ? car.CarImages.First().Path
                                : "https://via.placeholder.com/400x300?text=No+Image";

                                var price = car.Type == AutoHaven.Models.CarListingModel.ListingType.ForSelling
                                ? car.NewPrice.ToString("C0")
                                : $"${car.RentPrice:F2}/day";

                                <div class="car-card bg-white dark:bg-background-dark rounded-xl shadow-sm hover:shadow-lg overflow-hidden border border-gray-200 dark:border-gray-700 animate-on-scroll relative">
                                    <!-- Featured Badge -->
                                    <div class="featured-badge">
                                        <span class="material-symbols-outlined !text-lg">star</span>
                                        Featured
                                    </div>

                                    <!-- Image -->
                                    <div class="car-img aspect-[4/3] bg-cover bg-center" style='background-image: url("@carImages");'></div>

                                    <!-- Content -->
                                    <div class="p-6">
                                        <!-- Title -->
                                        <h3 class="text-xl font-bold text-navy dark:text-white">
                                            @car.Car.Manufacturer @car.Car.Model
                                        </h3>

                                        <!-- Year & Type -->
                                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                                            <span class="material-symbols-outlined inline !text-lg align-middle">calendar_today</span>
                                            @car.Car.ModelYear •
                                            @(car.Type == AutoHaven.Models.CarListingModel.ListingType.ForSelling ? "For Sale" : "For Rent")
                                        </p>

                                        <!-- Price -->
                                        <p class="text-lg font-bold text-primary mt-4">@price</p>

                                        <!-- Description -->
                                        @if (!string.IsNullOrEmpty(car.Description))
                                        {
                                            <p class="text-gray-600 dark:text-gray-400 mt-3 text-sm line-clamp-2">
                                                @car.Description
                                            </p>
                                        }

                                        <!-- Stats -->
                                        <div class="flex gap-4 mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 text-sm text-gray-600 dark:text-gray-400">
                                            <span class="flex items-center gap-1">
                                                <span class="material-symbols-outlined !text-lg">visibility</span>
                                                @car.Views
                                            </span>
                                            @if (car.Reviews != null && car.Reviews.Count > 0)
                                            {
                                                <span class="flex items-center gap-1">
                                                    <span class="material-symbols-outlined !text-lg text-yellow-500">star</span>
                                                    @car.Reviews.Average(r => r.Rating).ToString("F1")
                                                </span>
                                            }
                                        </div>

                                        <!-- Button -->
                                        <a href="@Url.Action("Details", "Car", new { id = car.ListingId })"
                                           class="flex max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-11 px-6 bg-primary text-white text-sm font-bold gap-2 mt-6 hover:shadow-lg transition-all w-full">
                                            <span>View Details</span>
                                            <span class="material-symbols-outlined">arrow_forward</span>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- No Featured -->
                        <div class="no-featured bg-white dark:bg-background-dark rounded-xl border-2 border-dashed border-gray-300 dark:border-gray-700 py-12">
                            <span class="material-symbols-outlined !text-7xl text-gray-300 dark:text-gray-600 mb-4 block">directions_car</span>
                            <h3 class="text-2xl font-bold text-gray-600 dark:text-gray-400 mt-4">No Featured Vehicles Yet</h3>
                            <p class="text-gray-500 dark:text-gray-500 mt-2">Check back soon for premium featured listings!</p>
                            <a href="@Url.Action("Index", "Car")" class="flex max-w-[300px] mx-auto cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-6 bg-primary text-white text-sm font-bold gap-2 mt-6 hover:shadow-lg transition-all">
                                <span class="material-symbols-outlined">arrow_forward</span>
                                <span>Browse All Cars</span>
                            </a>
                        </div>
                    }
                </div>
            </section>

            <!-- ✅ HOW IT WORKS SECTION -->
            <section class="section bg-background-light dark:bg-background-dark">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="text-center mb-16 animate-on-scroll">
                        <h2 class="text-4xl md:text-5xl font-bold text-navy dark:text-white">How It Works</h2>
                        <p class="text-gray-600 dark:text-gray-400 mt-4 text-lg">3 simple steps to find your dream car</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <!-- Step 1 -->
                        <div class="how-step animate-on-scroll">
                            <div class="how-circle mb-6">1</div>
                            <h3 class="text-2xl font-bold text-navy dark:text-white mb-3">Find Your Car</h3>
                            <p class="text-gray-600 dark:text-gray-400">Browse our extensive collection of luxury vehicles and filter by your preferences.</p>
                        </div>

                        <!-- Step 2 -->
                        <div class="how-step animate-on-scroll">
                            <div class="how-circle mb-6">2</div>
                            <h3 class="text-2xl font-bold text-navy dark:text-white mb-3">Book or Inquire</h3>
                            <p class="text-gray-600 dark:text-gray-400">Select your dates for rental or contact the seller for purchase inquiries.</p>
                        </div>

                        <!-- Step 3 -->
                        <div class="how-step animate-on-scroll">
                            <div class="how-circle mb-6">3</div>
                            <h3 class="text-2xl font-bold text-navy dark:text-white mb-3">Enjoy the Drive</h3>
                            <p class="text-gray-600 dark:text-gray-400">Pickup your rental or complete your purchase with seamless white-glove service.</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- ✅ CTA SECTION -->
            <section class="section bg-gradient-to-r from-primary/5 to-blue-100 dark:from-primary/10 dark:to-blue-900/20">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center animate-on-scroll">
                    <h2 class="text-3xl md:text-4xl font-bold text-navy dark:text-white mb-4">Ready to Find Your Perfect Car?</h2>
                    <p class="text-gray-600 dark:text-gray-400 text-lg mb-8 max-w-2xl mx-auto">Join thousands of satisfied customers who found their ideal vehicle on AutoHaven.</p>
                    <div class="flex flex-col sm:flex-row justify-center gap-4">
                        <a href="@Url.Action("Index", "Car")" class="flex max-w-[300px] mx-auto sm:mx-0 cursor-pointer items-center justify-center overflow-hidden rounded-lg h-14 px-8 bg-primary text-white text-base font-bold gap-2 hover:shadow-lg transition-all">
                            <span class="material-symbols-outlined">directions_car</span>
                            <span>Start Browsing</span>
                        </a>
                        @if (role == "Provider" || role == "Admin")
                        {
                            <a href="@Url.Action("Index", "Subscription")" class="flex max-w-[300px] mx-auto sm:mx-0 cursor-pointer items-center justify-center overflow-hidden rounded-lg h-14 px-8 bg-white dark:bg-gray-800 text-primary dark:text-white text-base font-bold gap-2 border-2 border-primary dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all">
                                <span class="material-symbols-outlined">sell</span>
                                <span>Browse Subscription</span>
                            </a>
                        }
                    </div>
                </div>
            </section>

        </main>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // ===== ANIMATION LOGIC =====
            const simpleElements = document.querySelectorAll('.animate-on-scroll');
            const staggerContainers = document.querySelectorAll('.stagger');

            const observerOptions = {
                root: null,
                rootMargin: '0px 0px -10% 0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const target = entry.target;
                        if (target.classList.contains('stagger')) {
                            const children = Array.from(target.children);
                            children.forEach((child, index) => {
                                setTimeout(() => {
                                    child.classList.remove('start-hidden');
                                }, index * 150);
                            });
                            observer.unobserve(target);
                        } else {
                            target.classList.remove('start-hidden');
                            observer.unobserve(target);
                        }
                    }
                });
            }, observerOptions);

            simpleElements.forEach(el => {
                el.classList.add('start-hidden');
                observer.observe(el);
            });

            staggerContainers.forEach(container => {
                Array.from(container.children).forEach(child => {
                    child.classList.add('start-hidden');
                });
                observer.observe(container);
            });

            // ===== PARALLAX =====
            const heroBg = document.getElementById('heroBg');
            if (heroBg) {
                let latestY = 0;
                let ticking = false;

                function onScroll() {
                    latestY = window.scrollY;
                    if (!ticking) {
                        window.requestAnimationFrame(() => {
                            const translate = Math.max(-60, Math.min(60, latestY * -0.08));
                            heroBg.style.transform = `translate3d(0, ${translate}px, 0) scale(1.03)`;
                            ticking = false;
                        });
                        ticking = true;
                    }
                }
                window.addEventListener('scroll', onScroll, { passive: true });
                onScroll();
            }

            // ===== CAROUSEL =====
            const carList = document.getElementById("carList");
            const nextBtn = document.getElementById("nextCar");
            const prevBtn = document.getElementById("prevCar");

            if (nextBtn && carList) {
                nextBtn.addEventListener("click", () => {
                    carList.appendChild(carList.firstElementChild);
                });
            }
            if (prevBtn && carList) {
                prevBtn.addEventListener("click", () => {
                    carList.insertBefore(carList.lastElementChild, carList.firstElementChild);
                });
            }

            // ===== SMOOTH SCROLL =====
            document.querySelectorAll('a[href^="#"]').forEach(a => {
                a.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    if (!href || href === '#') return;
                    const el = document.querySelector(href);
                    if (!el) return;
                    e.preventDefault();
                    el.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            });
        });
    </script>

</body>

</html>