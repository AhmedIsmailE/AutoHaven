<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoHaven</title>

    <!-- Tailwind + Fonts -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,300..700,0..1,0..1" rel="stylesheet" />

    <script id="tailwind-config">
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#00BFFF",
                "background-light": "#f6f6f8",
                "background-dark": "#0A192F",
                "surface-light": "#FFFFFF",
                "surface-dark": "#101622",
                "text-light-primary": "#0A192F",
                "text-dark-primary": "#E6E8EB",
                "text-light-secondary": "#333B49",
                "text-dark-secondary": "#a0aec0",
                "border-light": "#E6E8EB",
                "border-dark": "#333B49",
                "charcoal": "#333B49",
                "navy": "#0A192F",
                "silver": "#E6E8EB"
              },
              fontFamily: {
                "display": ["Manrope", "sans-serif"]
              },
              borderRadius: { "DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px" },
            },
          },
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 300, 'GRAD' 0, 'opsz' 24
        }


        #sidebarToggle.sidebar-open:hover {
            background-color: rgba(255, 255, 255, 0.1) !important;
        }
    </style>
</head>

<body class="font-display bg-background-light dark:bg-background-dark text-text-light-primary dark:text-text-dark-primary">
    <div class="relative flex min-h-screen w-full flex-col group/design-root">
        <div class="flex h-full w-full grow">
            <div class="flex min-h-screen w-full">

                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Menu Button -->
                    <button id="sidebarToggle"
                            class="material-symbols-outlined text-3xl p-2 fixed top-4 left-4 z-[60] bg-white dark:bg-gray-800 text-black dark:text-white rounded shadow-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-all duration-300">
                        menu
                    </button>

                    <!-- Sidebar -->
                    <div id="sidebarContainer"
                         class="fixed top-0 left-0 h-full w-64 bg-surface-light dark:bg-surface-dark z-50 transform -translate-x-full transition-transform duration-300 ease-in-out">
                        @Html.Partial("_SidebarPartialView")
                    </div>
                }

                <!-- Main Content -->
                <main id="mainContent" class="flex-1 transition-all duration-300 ease-in-out ml-0">
                    @Html.Partial("_HeaderPartialView")
                    <div class="p-10 flex-1">
                        @RenderBody()
                    </div>
                    @Html.Partial("_FooterPartialView")
                </main>
            </div>
        </div>
    </div>

    @* Section for Scripts *@
    <script>
        const toggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebarContainer');
        const main = document.getElementById('mainContent');

        toggle.addEventListener('click', () => {
            const isOpen = !sidebar.classList.contains('-translate-x-full');

            if(isOpen){
                sidebar.classList.add('-translate-x-full');
                main.classList.remove('ml-64');

                toggle.style.left = '1rem';
               
                toggle.classList.remove('bg-navy', 'dark:bg-surface-dark', 'text-white', 'sidebar-open');
                toggle.classList.add('bg-white', 'dark:bg-gray-800', 'text-black', 'dark:text-white');
            } else {
                sidebar.classList.remove('-translate-x-full');
                main.classList.add('ml-64');

                toggle.style.left = '13rem'; 

                toggle.classList.remove('bg-white', 'dark:bg-gray-800', 'text-black', 'dark:text-white');
                toggle.classList.add('bg-navy', 'dark:bg-surface-dark', 'text-white', 'sidebar-open');
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
    @if (ViewBag.SuppressNotifications == null)
    {
        @await Html.PartialAsync("_Notification")
    }
</body>
</html>