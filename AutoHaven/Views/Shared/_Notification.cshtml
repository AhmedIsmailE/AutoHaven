@{
    var message = TempData["Notification.Message"] as string;
    var type = (TempData["Notification.Type"] as string ?? "info").ToLowerInvariant();
}

@if (!string.IsNullOrWhiteSpace(message))
{
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        Swal.fire({
            toast: true,
            position: 'top-end',
            icon: '@type',     // success | error | info | warning | question
            title: '@message',
            showConfirmButton: false,
            timer: 4000,
            timerProgressBar: true
        });
    </script>
}
