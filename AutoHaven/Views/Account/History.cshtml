@model IEnumerable<AutoHaven.Models.CarViewHistoryModel>
@using AutoHaven.Models
@using System.Linq

@{
    ViewData["Title"] = "Browsing History";

    var page = (ViewBag.CurrentPage as int?) ?? 1;
    var totalPages = (ViewBag.TotalPages as int?) ?? 1;
    var totalCount = (ViewBag.TotalCount as int?) ?? 0;

    var q = (ViewContext.HttpContext.Request.Query["q"].ToString() ?? string.Empty).Trim();
    var sortBy = (ViewContext.HttpContext.Request.Query["sortBy"].ToString() ?? (ViewBag.SortBy as string) ?? "newest");

    // Prepare " selected" strings (note leading space)
    var optNewest = sortBy == "newest" ? " selected" : "";
    var optPriceAsc = sortBy == "price_asc" ? " selected" : "";
    var optPriceDesc = sortBy == "price_desc" ? " selected" : "";
    var optHighestRated = sortBy == "highest_rated" ? " selected" : "";
    var optMostViewed = sortBy == "most_viewed" ? " selected" : "";

    string DefaultImageUrl() => Url.Content("~/images/default-car.png");

    Func<CarImageModel?, string> ResolveImageUrl = (img) =>
    {
        if (img == null) return DefaultImageUrl();
        var url = img.Path?.Trim() ?? string.Empty;
        if (string.IsNullOrEmpty(url)) return DefaultImageUrl();
        if (url.StartsWith("http://", System.StringComparison.OrdinalIgnoreCase) ||
            url.StartsWith("https://", System.StringComparison.OrdinalIgnoreCase)) return url;
        if (url.StartsWith("/")) return url;
        if (url.StartsWith("Uploads/", System.StringComparison.OrdinalIgnoreCase) ||
            url.StartsWith("Uploads\\", System.StringComparison.OrdinalIgnoreCase) ||
            url.IndexOf("Listings", System.StringComparison.OrdinalIgnoreCase) >= 0)
        {
            return Url.Content($"~/{url.Replace("\\", "/")}");
        }
        return Url.Content($"~/images/{url.TrimStart('/')}");
    };
}

<div class="w-full max-w-6xl mx-auto px-4 py-10">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-extrabold tracking-tight text-gray-900">History</h1>
            <p class="text-sm text-gray-500 mt-1">
                @if (totalCount > 0)
                {
                    <text>You have @totalCount viewed @(totalCount == 1 ? "listing" : "listings") in your history.</text>
                }
                else
                {
                    <text>You haven't viewed any listings yet.</text>
                }
            </p>
        </div>

        <div class="flex items-center gap-3">
            <form method="get" asp-action="History" asp-controller="Account" class="flex items-center gap-2">
                <input type="hidden" name="q" value="@q" />
                <select name="sortBy" id="sortByHistory" onchange="this.form.submit();"
                        class="form-select text-sm rounded-lg border border-gray-200 bg-white text-gray-800 focus:ring-blue-600">
                    @Html.Raw($"<option value=\"newest\"{optNewest}>Newest Listed</option>")
                    @Html.Raw($"<option value=\"price_asc\"{optPriceAsc}>Price (Low to High)</option>")
                    @Html.Raw($"<option value=\"price_desc\"{optPriceDesc}>Price (High to Low)</option>")
                    @Html.Raw($"<option value=\"highest_rated\"{optHighestRated}>Highest Rated</option>")
                    @Html.Raw($"<option value=\"most_viewed\"{optMostViewed}>Most Viewed</option>")
                </select>
            </form>

            <form method="post" asp-action="ClearHistory" asp-controller="Account" onsubmit="return confirm('Clear your browsing history?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="ml-2 inline-flex items-center rounded-full bg-white border border-gray-200 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Clear History
                </button>
            </form>
        </div>
    </div>

    <form id="antiForgeryForm" method="post" style="display:none">
        @Html.AntiForgeryToken()
    </form>

    @* --- Empty state (Favorites-style centered UI) --- *@
    <div id="historyEmpty" class="w-full mt-10" style="@(totalCount > 0 ? "display:none" : "")">
        <div class="max-w-2xl mx-auto flex flex-col items-center justify-center text-center gap-4 py-20">
            <div class="flex items-center justify-center h-20 w-20 rounded-full bg-gray-100 text-gray-400">
                <span class="material-symbols-outlined text-4xl">history</span>
            </div>

            <div>
                <h2 class="text-lg font-semibold text-gray-900 mb-2">No browsing history</h2>
                <p class="text-sm text-gray-500 max-w-md mx-auto">
                    Browse car listings and they'll appear here for quick access later.
                </p>
            </div>

            <a href="@Url.Action("Index", "Car")"
               class="mt-3 inline-flex items-center rounded-full bg-blue-600 px-6 py-2 text-sm font-semibold text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1">
                Browse Cars
            </a>
        </div>
    </div>

    @if (!Model?.Any() ?? true)
    {
        @* nothing else when empty (pagination & grid are hidden by server render) *@
    }
    else
    {
        <div id="historyGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var entry in Model)
            {
                var listing = entry?.CarListing;
                if (listing == null) continue;

                var title = listing.Car != null ? $"{listing.Car.Manufacturer} {listing.Car.Model} {listing.Car.ModelYear}" : $"Listing #{listing.ListingId}";
                var mainImage = listing.CarImages?.FirstOrDefault(ci => ci.IsPrimary) ?? listing.CarImages?.FirstOrDefault();
                var imageUrl = ResolveImageUrl(mainImage);

                decimal price = listing.Type == CarListingModel.ListingType.ForSelling ? listing.NewPrice : listing.RentPrice;
                string priceLabel = listing.Type == CarListingModel.ListingType.ForSelling ? "" : "/day";
                var viewedTicks = entry.ViewedAt.ToUniversalTime().Ticks;

                // Determine favourited state (authoritative)
                var favSet = ViewBag.FavouritedIds as System.Collections.Generic.HashSet<int>;
                bool isFavorited = false;
                if (favSet != null)
                {
                    isFavorited = favSet.Contains(listing.ListingId);
                }
                else
                {
                    try
                    {
                        var entryProp = entry.GetType().GetProperty("IsFavorited");
                        if (entryProp != null)
                        {
                            isFavorited = (bool)entryProp.GetValue(entry);
                        }
                        else
                        {
                            var favsProp = listing.GetType().GetProperty("Favourites");
                            if (favsProp != null)
                            {
                                var favsVal = favsProp.GetValue(listing) as System.Collections.IEnumerable;
                                if (favsVal != null)
                                {
                                    var en = favsVal.GetEnumerator();
                                    isFavorited = en.MoveNext();
                                }
                            }
                        }
                    }
                    catch { isFavorited = false; }
                }

                <div class="js-history-card group flex flex-col rounded-2xl bg-white shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-200 border border-gray-100"
                     data-price="@price"
                     data-date="@viewedTicks">
                    <div class="relative h-48 w-full overflow-hidden rounded-t-2xl bg-gray-100">
                        <img src="@imageUrl" alt="@title" class="h-full w-full object-cover group-hover:scale-105 transition-transform duration-300" />

                        <div class="absolute left-3 top-3 z-20">
                            <span class="inline-block text-xs font-semibold px-3 py-1 rounded-full backdrop-blur-sm bg-white/20 border
                                    @(listing.Type == CarListingModel.ListingType.ForRenting ? "border-green-400 text-green-700" : "border-blue-400 text-blue-700")">
                                @(listing.Type == CarListingModel.ListingType.ForRenting ? "For Rent" : "For Sale")
                            </span>
                        </div>

                        <div class="absolute right-3 top-14">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Login", "Account")"
                                   class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/90 shadow-md hover:bg-white"
                                   title="Log in to favourite">
                                    <span class="material-symbols-outlined text-lg text-gray-700">favorite_border</span>
                                </a>
                            }
                            else
                            {
                                <button type="button"
                                        class="js-fav-btn inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/90 shadow-md hover:bg-white"
                                        aria-pressed="@(isFavorited ? "true" : "false")"
                                        data-listing-id="@listing.ListingId"
                                        data-favorited="@(isFavorited.ToString().ToLowerInvariant())"
                                        title="@(isFavorited ? "Remove from favourites" : "Add to favourites")">
                                    <span class="material-symbols-outlined text-lg @(isFavorited ? "text-red-600" : "text-gray-700")">
                                        @(isFavorited ? "favorite" : "favorite_border")
                                    </span>
                                </button>
                            }
                        </div>

                        <form method="post" asp-action="RemoveFromHistory" asp-controller="Account" asp-route-id="@entry.Id" onsubmit="return confirm('Remove this entry from your history?');" class="absolute right-3 top-3">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/90 shadow-md hover:bg-white" title="Remove from history">
                                <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                            </button>
                        </form>
                    </div>

                    <div class="flex flex-1 flex-col px-4 pt-4 pb-4">
                        <h3 class="text-base font-semibold text-gray-900 line-clamp-2">@title</h3>
                        <p class="mt-1 text-xs text-gray-500">
                            Viewed: @entry.ViewedAt.ToLocalTime().ToString("g")
                        </p>

                        <div class="mt-4 flex items-end justify-between gap-2">
                            <div>
                                <p class="text-lg font-extrabold text-gray-900">
                                    @price.ToString("C0")
                                    @if (!string.IsNullOrEmpty(priceLabel))
                                    {
                                        <span class="text-sm font-medium text-gray-500">@priceLabel</span>
                                    }
                                </p>
                            </div>

                            <a asp-action="Details" asp-controller="Car" asp-route-id="@listing.ListingId"
                               class="inline-flex items-center rounded-full border border-gray-200 px-3 py-1 text-xs font-semibold text-gray-700 hover:border-blue-500 hover:text-blue-600">
                                View details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <div class="mt-8 flex justify-center items-center gap-3">
            <nav class="inline-flex items-center gap-2" aria-label="Pagination">
                <a class="px-3 py-2 rounded-md border border-gray-200 bg-white" asp-action="History" asp-controller="Account" asp-route-page="@(page > 1 ? page - 1 : 1)" asp-route-q="@q" asp-route-sortBy="@sortBy">‹</a>

                @for (int i = 1; i <= totalPages; i++)
                {
                    if (i == page)
                    {
                        <span class="px-3 py-2 rounded-md bg-blue-600 text-white">@i</span>
                    }
                    else if (i <= 3 || i > totalPages - 3 || (i >= page - 1 && i <= page + 1))
                    {
                        <a class="px-3 py-2 rounded-md border border-gray-200 bg-white" asp-action="History" asp-controller="Account" asp-route-page="@i" asp-route-q="@q" asp-route-sortBy="@sortBy">@i</a>
                    }
                    else if (i == 4 && page > 4)
                    {
                        <span class="px-3 py-2">…</span>
                    }
                }

                <a class="px-3 py-2 rounded-md border border-gray-200 bg-white" asp-action="History" asp-controller="Account" asp-route-page="@(page<totalPages? page + 1 : totalPages)" asp-route-q="@q" asp-route-sortBy="@sortBy">›</a>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // small toast helper (SweetAlert2)
        function showToast(type, message) {
            Swal.fire({
                toast: true,
                position: 'top-end',
                icon: type || 'info',
                title: message || '',
                showConfirmButton: false,
                timer: 2500,
                timerProgressBar: true
            });
        }

        (function () {
            const antiForm = document.getElementById('antiForgeryForm');
            const tokenInput = antiForm ? antiForm.querySelector('input[name="__RequestVerificationToken"]') : null;
            const token = tokenInput ? tokenInput.value : '';

            document.addEventListener('click', function (e) {
                const btn = e.target.closest && e.target.closest('.js-fav-btn');
                if (!btn) return;

                e.preventDefault();

                const listingId = btn.getAttribute('data-listing-id');
                const currently = btn.getAttribute('data-favorited') === 'true';
                const addUrl = '/Account/AddToFavoriteInHistory';
                const removeUrl = '/Account/RemoveFromFavoriteInHistory';
                const url = currently ? removeUrl : addUrl;

                // optimistic UI
                toggleButtonUI(btn, !currently);
                btn.disabled = true;

                fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                        'RequestVerificationToken': token
                    },
                    body: new URLSearchParams({ listingId: listingId })
                })
                .then(async (resp) => {
                    // try parse json if available
                    let json = null;
                    try { json = await resp.json(); } catch { json = null; }

                    if (!resp.ok) {
                        // server error: show message returned by server if any
                        const msg = (json && json.message) ? json.message : ('Server error: ' + resp.status);
                        throw new Error(msg);
                    }

                    // success: return parsed json (or fallback)
                    return json ?? { success: true, isFavorite: !currently };
                })
                .then((data) => {
                    if (data && data.success === false) {
                        // server says failure -> rollback UI and show error
                        toggleButtonUI(btn, currently); // rollback
                        showToast('error', data.message || 'Failed to update favourites');
                    } else {
                        // success -> pick server-provided state or invert
                        const newState = (typeof data.isFavorite !== 'undefined') ? Boolean(data.isFavorite) : !currently;
                        setButtonState(btn, newState);
                        showToast('success', newState ? 'Added to favourites' : 'Removed from favourites');
                    }
                })
                .catch(err => {
                    console.error(err);
                    // rollback UI and show toast
                    toggleButtonUI(btn, currently);
                    showToast('error', err && err.message ? err.message : 'Failed to update favourites');
                })
                .finally(() => { btn.disabled = false; });
            });

            function toggleButtonUI(btn, isFav) {
                const icon = btn.querySelector('.material-symbols-outlined');
                if (!icon) return;
                if (isFav) {
                    icon.textContent = 'favorite';
                    icon.classList.remove('text-gray-700');
                    icon.classList.add('text-red-600');
                    btn.setAttribute('data-favorited', 'true');
                    btn.setAttribute('aria-pressed', 'true');
                    btn.title = 'Remove from favourites';
                } else {
                    icon.textContent = 'favorite_border';
                    icon.classList.remove('text-red-600');
                    icon.classList.add('text-gray-700');
                    btn.setAttribute('data-favorited', 'false');
                    btn.setAttribute('aria-pressed', 'false');
                    btn.title = 'Add to favourites';
                }
            }

            function setButtonState(btn, isFav) { toggleButtonUI(btn, isFav); }
        })();
    </script>
}

