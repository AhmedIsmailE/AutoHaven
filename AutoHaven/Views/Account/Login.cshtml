@model AutoHaven.ViewModel.LoginUserViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="relative flex min-h-screen w-full flex-col items-center justify-center bg-background-light dark:bg-background-dark overflow-x-hidden"
     style="background-image: linear-gradient(to top right, #f6f6f8, #e7ebf3);">

    <!-- BACKGROUND IMAGES -->
    <div class="dark:hidden absolute inset-0 bg-cover bg-center"
         style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuAiefPLIsQqfYrLa8jsORq9QRTX_BFLEaCAPCANxXI1AOeIFzsVfafxNyYc8uRmDPHpJ4IDcPOvCvab3UO00veumKjjMlfsVPnz_4D67__qXe3E708Np3XiVxhbNYrG9onWYmTauWtTe_watrzrHqoKt-o_NOYN5UAzIk4UK9_zibIzPy1rHDbLxHimA91syGv8b58D_ewXmJyvImtQWgqmZ-ndmPcM5X0AxWOLgbnudcNNj10p-YOH14MOlqSI_7KvM9g4MhqL5R4Z'); opacity: 0.05;">
    </div>

    <div class="hidden dark:block absolute inset-0 bg-cover bg-center"
         style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuC80IAudiy7x2umYt6gq5vAjdpftxfRSTjRoGaxwWqKMSVjq0VIH6DQ1shU-IDMqHslPfQNG7bF7E64mzueddqeoYvPACbNxDqrQfAF9PjyNDYIowbtRAjMXJ2EZ4d15UQaFs0AFflgU73ecIGPKVhEPZ4_cR4CEnzDKP4y1qPncB_ie0EnbdgwLUfMCdyEVt4A_hs51X82LC3-qpe8JfxC0kq_iLTyPfw9u72s885qojzhKhS9eY2Uy5EUPg_ij2mcGBVjTxtoxGTO'); opacity: 0.05;">
    </div>


    <div class="relative w-full max-w-md p-6">

        <!-- LOGO -->
        <div class="flex justify-center mb-8">
            <a class="flex items-center gap-3 text-zinc-900 dark:text-white" href="#">
                <div class="h-8 w-8 text-primary">
                    <svg fill="none" viewBox="0 0 48 48">
                        <path d="M42.4379 44C42.4379 44 36.0744 33.9038 41.1692 24C46.8624 12.9336 42.2078 4 42.2078 4L7.01134 4C7.01134 4 11.6577 12.932 5.96912 23.9969C0.876273 33.9029 7.27094 44 7.27094 44L42.4379 44Z" fill="currentColor" />
                    </svg>
                </div>
                <h2 class="text-2xl font-bold">AutoHaven</h2>
            </a>
        </div>

        <!-- LOGIN CARD -->
        <div class="bg-white/70 dark:bg-background-dark/70 backdrop-blur-lg rounded-xl shadow-lg p-8 w-full">

            <h1 class="text-3xl font-bold text-center text-zinc-900 dark:text-white pb-2">Welcome Back</h1>
            <p class="text-center text-zinc-500 dark:text-zinc-400 pb-8">Log in to continue to your account.</p>

            <!-- ASP.NET LOGIN FORM -->
            <form asp-action="Login" method="post" class="flex flex-col gap-4">

                @* <div asp-validation-summary="All" class="text-red-600 text-sm"></div> *@

                <!-- EMAIL / PHONE -->
                <label class="flex flex-col">
                    <p class="text-base font-medium pb-2 text-zinc-800 dark:text-zinc-200">Email or Phone</p>
                    <div class="relative flex items-center">
                        <span class="material-symbols-outlined absolute left-4 text-zinc-400">mail</span>
                        <input asp-for="EmailOrPhone"
                               class="form-input w-full rounded-lg border border-zinc-300 dark:border-zinc-700 bg-background-light/50 dark:bg-zinc-800/50 h-12 pl-12 pr-4"
                               placeholder="you@example.com" />
                    </div>
                    <span asp-validation-for="EmailOrPhone" class="text-red-600 text-sm"></span>
                </label>

                <!-- PASSWORD -->
                <label class="flex flex-col">
                    <p class="text-base font-medium pb-2 text-zinc-800 dark:text-zinc-200">Password</p>
                    <div class="relative flex items-center">
                        <span class="material-symbols-outlined absolute left-4 text-zinc-400">lock</span>
                        <input asp-for="Password"
                               type="password"
                               class="form-input w-full rounded-lg border border-zinc-300 dark:border-zinc-700 bg-background-light/50 dark:bg-zinc-800/50 h-12 pl-12 pr-12"
                               placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </label>

                <!-- REMEMBER ME -->
                <div class="flex items-center justify-between py-2">
                    <label class="flex items-center gap-2">
                        <input asp-for="RememberMe"
                               class="h-5 w-5 border-2 border-zinc-300 dark:border-zinc-600 rounded" />
                        <span class="text-sm text-zinc-800 dark:text-zinc-200">Remember me</span>
                    </label>
                </div>

                <!-- SUBMIT -->
                <button class="h-12 bg-primary text-white rounded-lg font-bold hover:opacity-90">
                    Log In
                </button>

            </form>

            <p class="text-center text-sm text-zinc-500 dark:text-zinc-400 mt-8">
                Don't have an account?
                <a href="/Account/Register" class="text-primary font-medium hover:underline">Sign up now</a>
            </p>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

















